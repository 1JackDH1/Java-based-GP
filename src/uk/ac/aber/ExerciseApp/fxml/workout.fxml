<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox>
               <children>
                  <HBox spacing="5.0">
                     <children>
                        <Label fx:id="exercises" text="[x]" />
                        <Label text="Exercises" />
                     </children>
                  </HBox>
                  <HBox spacing="5.0">
                     <children>
                        <Label fx:id="exerciseTime" text="[x]" />
                        <Label text="Each" />
                     </children>
                  </HBox>
                  <HBox spacing="5.0">
                     <children>
                        <Label fx:id="breakTime" text="[x]" />
                        <Label text="Breaks" />
                     </children>
                  </HBox>
                  <HBox spacing="5.0">
                     <children>
                        <Label fx:id="halftimeBreak" text="[x]" />
                        <Label text="Half-time break" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <Label fx:id="totalTime" text="[Total time]" StackPane.alignment="TOP_RIGHT" />
         </children>
      </StackPane>
   </children>
   <styleClass>
      <String fx:value="border" />
      <String fx:value="interactive" />
   </styleClass>
</AnchorPane>
