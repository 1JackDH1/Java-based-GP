<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" alignment="TOP_CENTER" prefHeight="360.0" prefWidth="640.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uk.ac.aber.ExerciseApp.fxcontroller.WorkoutPopupController">
   <children>
      <HBox fx:id="topHBox" alignment="CENTER">
         <children>
            <Button fx:id="closeBtn" mnemonicParsing="false" onAction="#close" text="Close" />
            <Button fx:id="startBtn" mnemonicParsing="false" onAction="#start" text="Start" />
         </children>
      </HBox>
      <HBox fx:id="bottomHBox" alignment="CENTER">
         <children>
            <Button fx:id="deleteBtn" mnemonicParsing="false" onAction="#delete" text="Delete" />
            <Button fx:id="createNewBtn" mnemonicParsing="false" onAction="#createNew" text="Create a new Workout" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
